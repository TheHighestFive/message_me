<h2 class="ui center aligned icon header" style="color:white">
  <i class="green comment outline icon"></i>
  Spiky Chat!
</h2>

<div class="ui two column grid">
  <div class="twelve wide column">
    <div class="ui fluid card chatbox" id="page-content">
      <div class="content" id="messages">
        <div class="ui feed" id="message-container">
          <!-- <h4 class="ui center aligned green header">Spiky Chat</h4> -->
          <%= render @messages %>
        </div>
      </div>
      <div class="extra content">
        <%= form_for(@message, html: {class: "ui reply form", role: "form"}, url: message_path, method: "POST", remote: true) do |f| %>
          <div class="field">
            <div class="ui fluid icon input">
              <div class="ui transparent icon input">
                <%= f.text_field :body %>
              </div>
              <%= f.button '<i class="bordered inverted green edit icon"></i>'.html_safe %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="four wide column">
    <div class="ui card" id="page-content">
      <div class="content">
    <div class="ui fluid inverted vertical menu">
      <a class="active item">
        Home
      </a>
      <a class="item">
        Messages
      </a>
      <a class="item">
        Friends
      </a>
    </div>
  </div>
</div>
</div>
</div>
